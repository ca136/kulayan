    -khtml-transform args
    transform args

body
  font-family Oxygen
  color #444

.facebook-icon, .twitter-icon, .pinterest-icon, .tumblr-icon
  height 35px
  width 35px
  display inline-block
  background-position 50%
  margin 2px


.facebook-icon
  background-image url(/static/images/icons/facebook.png)

.twitter-icon
  background-image url(/static/images/icons/twitter.png)

.pinterest-icon
  background-image url(/static/images/icons/pinterest.png)

.tumblr-icon
  background-image url(/static/images/icons/tumblr.png)


.facebook-icon:hover
  background-image url(/static/images/icons/facebook-active.png)

.twitter-icon:hover
  background-image url(/static/images/icons/twitter-active.png)

.pinterest-icon:hover
  background-image url(/static/images/icons/pinterest-active.png)

.tumblr-icon:hover
  background-image url(/static/images/icons/tumblr-active.png)

select
  border 1px solid cornflowerblue

.shopping-cart
  margin-right 10px
  vertical-align middle
  cursor pointer

.container
  position relative
  max-width 1200px
  min-width 800px
  min-height 620px
  margin 10px 30px

  // site defaults
  font-family Oxygen
  font-size 13px
  color #333

  .bread-crumb
    padding-bottom 12px

    a
      color #797979
      text-decoration none

  .logo-container

    .logo-img
      width 120px
      height 80px
      margin-top -20px

    .header
      display inline-block
      font-size 50px
      margin 0px 10px 5px
      vertical-align top


  .top-right-space
    position absolute
    top 0
    right 0
    text-align right

  .main-nav-bar
    background-image: url('/static/images/green-watercolor.png');
    background-size 100% 100%
    background-repeat no-repeat
    background-position 15px 0px;
    height 75px
    width 100%
    margin 0 auto
    position relative

    .nav-inner-container
      margin auto
      width 100%
      height 50%
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      height: 50%;

    .nav-list
      list-style none
      font-weight bold
      margin-bottom 10px
      position relative
      z-index 5
      text-align center
      border-bottom 1px solid rgba(0,0,0,0.15)
      padding 0 0 6px
      margin 0 75px

      .nav-item
        display inline-block
        position relative
        margin 0 40px

        &:hover .nav-sub-list
          left 0
          top 37px
          padding 5px
          margin-left -10px

      .nav-link
        font-size 24px
        font-weight 100
        background rgba(0, 0, 0, 0)

        &:hover
          text-decoration none

        &::after
          content ''
          position absolute
          top -10px
          bottom -10px
          right -10px
          left -10px


        .nav-item:hover &
          color: #444

      .nav-sub-list
        background rgba(240, 240, 240, 0.8)
        border 1px solid rgba(0, 0, 0, 0.15)
        border-bottom-left-radius 10px
        border-bottom-right-radius 10px
        list-style none
        position absolute
        left -9999px
        padding 0
        margin 0

        .nav-sub-list-item
          padding-top 1px
          margin 0
          padding 0

        .nav-sub-list-link
          white-space nowrap
          font-size 17px
          text-align left
          color #868F98
          text-decoration none
          padding 2px 0
          display block
          font-weight 200

          .nav-item:hover &
            text-decoration none

  .footer-dividing-line
    width 100%
    height 30px
    background url('/static/images/footer-graphic.png') repeat-x top
    background-size contain
    margin 10px 0

  .footer-list
    width 100%
    padding 10px 32px 25px
    box-sizing border-box

    .signup-container
      box-sizing border-box
      display inline-block
      width 55%
      text-align right

    .company-list, .service-list, .connect-section
      box-sizing border-box
      display inline-block
      width 15%
      vertical-align top

      .footer-header
        // font-size 14px

      .footer-item
        // font-size 12px

  .copyright-container
    border-top 2px solid #E0E0E0
    background #F1F5F8

    .copyright-inner
      padding 15px 0 15px 20px

.cart-modal-container
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background rgba(0, 0, 0, 0.4)
  opacity 0
  pointer-events none

  &.active
    opacity 1
    z-index 99
    pointer-events auto

  .cart-outer-container
    position absolute
    top 0
    left 0
    right 0
    bottom 0

  .cart-inner-container
    overflow auto
    position absolute
    margin auto
    top 0
    bottom 0
    left 0
    right 0
    height 95%
    width 80%
    max-width 850px
    background white
    box-shadow 0 0 8px 4px rgba(0, 0, 0, 0.15)
    border 2px solid rgba(0, 0, 0, 0.65)
    transition 0.3s ease-in-out
    padding 10px 30px

    &.slide
      transform translate(-105%, 0)
      opacity 0

  .cart-header
    margin 6px
    text-align center
    font-size 20px

  .cart-subheaders
    margin 10px 0
    border-top 1px solid rgba(0, 0, 0, 0.15)
    border-bottom 1px solid rgba(0, 0, 0, 0.15)
    padding 10px

    .subheader-item
      width 40%
      margin-left 80px
      margin-right 35px
      display inline-block
      text-align center

    // .subheader-quantity
    //   margin-left 75px

    .subheader-price
      margin-left 25px

  .cart-item
    margin-bottom 10px
    padding-bottom 10px
    border-bottom 1px solid rgba(0, 0, 0, 0.15)
    position relative

    .cart-thumbnail
      height 100px
      width 100px
      margin-left 10px
      background-size cover
      background-position top center
      display inline-block
      vertical-align middle

    .cart-item-details
      display inline-block
      vertical-align middle
      width 40%

      .cart-item-title
        vertical-align middle
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        margin-left 5px
        font-size 13px

      .cart-item-options
        vertical-align middle
        text-align center
        font-size 13px

        .cart-color-box
          background #FFC0CB
          width 13px
          height 13px
          display inline-block
          vertical-align middle
          margin 0 5px

    .cart-item-quantity
      display inline-block
      width 70px
      text-align center

    .cart-item-price
      display inline-block
      width 45px
      margin-left 20px
      text-align center

    .cart-remove-item
      position absolute
      right 50px
      top 50%
      margin-top -1em
      background-image url('/static/images/icons/trash.png')
      background-size cover
      height 20px
      width 20px
      cursor pointer
      opacity 0.6

      &:hover
        opacity 1

  .order-summary-container
    font-size 0
    vertical-align top

    .order-summary-products
      font-size 12px
      display inline-block
      width 50%

      .cart-thumbnail
        height 70px
        width 50px

    .order-summary-price
      vertical-align top
      font-size 12px
      display inline-block
      width 50%

  .cart-total
    text-align right
    font-weight bold
    font-size 18px

  .cart-shipping, .cart-subtotal
    text-align right
    font-weight bold
    font-size 16px

  .total-price
    width 80px
    display inline-block

  .back-to-cart
    margin-top 60px
    font-size 14px
    cursor pointer

  .checkout-button
    text-align center
    width auto
    position absolute
    right 30px
    margin-top 14px
    background #14AB52
    padding 8px 26px
    color #EEE
    font-size 16px

    &:hover
      opacity 0.8
      cursor pointer

  .back-to-cart
    display inline-block
    margin-right 50px

  .checkout-inner-container
    overflow auto
    position absolute
    margin auto
    top 0
    bottom 0
    left 0
    right 0
    height 95%
    width 80%
    max-width 850px
    background white
    box-shadow 0 0 8px 4px rgba(0, 0, 0, 0.15)
    border 2px solid rgba(0, 0, 0, 0.65)
    transition 0.3s ease-in-out
    transform translate(105%, 0)
    opacity 0
    padding 10px 30px
    box-sizing border-box
    font-size 0

    &.slide
      transform translate(0, 0)
      opacity 1

    .left-panel, .right-panel
      width 50%
      display inline-block
      vertical-align top
      min-width 320px

    form
      width 100%
      display block
      font-size 14px

    .form-title
      text-decoration underline
      margin-left 10px
      margin-top 15px
      margin-bottom 15px
      font-size 14px

    .shipping-form

      input
        width 200px

      select
        width 320px
        margin 0 10px 8px

    .field-container
      margin 8px

    input
      box-shadow inset 0 1px 0 rgba(0, 0, 0, 0.1), 0 1px 1px rgba(255, 255, 255, 0.15)
      border 1px solid #CFCFCF
      outline none

      &:focus
        border-color #AAA

      &.ng-invalid.ng-dirty
        box-shadow 0 0 2px 1px #FA787E
        // border-color #FA787E

      &.ng-valid.ng-dirty
        box-shadow 0 0 2px 1px #00CC1B
        // border-color #00CC1B

    label
      width auto
      display inline-block
      min-width 115px

    .payment-form

      .payment-errors
        display block
        height 30px

      span
        margin-right 10px

    // ADD MEDIA QUERIES OR CALC

// PRODUCTS PAGE

.products-page
  //padding?
  padding 20px

  .products-navigation
    //padding?
    .bread-crumbs, .pagination
      display inline-block
      width 50%
      margin 0
      padding 0
      height 3em
      vertical-align top
      font-size 14px

    .pagination
      text-align right

  .filter-container
    .sort-by-container, .size-filter-container
      display inline-block
      padding-right 14px

    .size-filter-container
      padding-left 14px
      border-left 1px solid rgba(0, 0, 0, 0.15)

    .sort-label
      display inline-block
      margin 0 10px 0 0

    .size-filter-selector
      display inline-block

    .size-filter-item
      padding 4px 8px
      margin 0 4px
      background lightsteelblue
      cursor pointer
      min-width 14px
      display inline-block
      text-align center

      &.active
        background cornflowerblue

    .filter-reset
      padding 4px 8px
      background darkcyan
      color #FFF
      border-radius 4px
      cursor pointer
      text-decoration none
      opacity 1
      transition opacity 0.3s ease-in-out

      .ie &
        display none

      &.fade
        opacity 0

  .product-listings
    width 100%
    margin 0
    padding 0
    font-size 0

  .product-listing
    width 200px
    list-style none
    display inline-block
    margin 20px 30px 20px 0

  .product-listing-thumb
    height 290px
    background-size cover
    width 200px
    background-repeat no-repeat
    background-position 50%

  .product-listing-name
    font-size 12px
    height 30px
    width 170px
    margin-right 2px
    display inline-block
    overflow hidden
    vertical-align middle

  .product-listing-price
    font-size 12px
    display inline-block
    height 30px
    width 26px
    line-height 30px
    vertical-align middle
    text-align right

// PRODUCT PAGE
.product-page

  .product-images-container
    width 44%
    display inline-block
    padding 15px 15px 15px 0
    box-sizing border-box

    .product-main-image

      img
        height auto
        max-width 100%

    .product-thumbnail
      display inline-block

      img
        height 90px

  .product-details-container
    width 55%
    display inline-block
    vertical-align top
    padding 15px 0 0 0
    box-sizing border-box

    .product-title
      h1
        display inline-block
        line-height normal
        padding 0
        margin 0 0 20px 0

  .product-choice-container
    background #EFEEED

    .product-choice-inner
      position relative
      padding 15px 25px 0

    .share-container
      position absolute
      right 10px
      top 124px

    .choice-label
      margin-top 0

    .color-option, .size-option
      height 30px
      width 30px
      display inline-block
      border 1px solid rgba(0, 0, 0, 0)
      cursor pointer
      margin 2px

      &.selected
        border 1px solid rgba(10, 10, 10, 0.8)

      &.inactive
        opacity 0.3
        border none
        cursor auto

    .cart-container
      position absolute
      text-align right
      top 50px
      right 10px

    .add-to-cart
      height 32px
      width 150px
      background #F16666
      color #FFF
      line-height 32px
      text-align center
      opacity 0.5

      &.active
        opacity 1
        cursor pointer